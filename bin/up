set -u

readonly NAMESPACE=zookage
readonly bin_dir=$(cd "$(dirname "$0")"; pwd)

if kubectl get namespace ${NAMESPACE} &> /dev/null; then
  read -r -p "Scrap the current namespace? [y/N]: " scrap
  case "$scrap" in
    y|Y|yes ) "${bin_dir}/down";;
    n|N|no|"" ) ;;
    * ) echo "Please input y or n"; exit 1;;
  esac
fi

set -e

kubectl \
  apply \
  --kustomize=kubernetes \
  --selector="component in (namespace,package)" \
  --wait=true
until "${bin_dir}/kubectl" wait job --all=true --for="condition=complete" --timeout=1s 2> /dev/null; do :; done

kubectl apply --kustomize kubernetes
previous=''
while true; do
  set +e
  current=$("${bin_dir}/kubectl" wait pod --all=true --for=condition=Ready --selector="tier!=job" --timeout=1s 2> /dev/null)
  exit_code=$?
  set -e

  if ! cmp -s <(echo "$previous") <(echo "$current"); then
    diff <(echo "$previous") <(echo "$current") | grep -E '^> ' | sed -E 's/^> //'
  fi

  if [[ $exit_code -eq 0 ]]; then
    break
  fi
  previous="$current"
done

echo
echo "All resources are ready!"
