<configuration>
  <property>
    <name>javax.jdo.option.ConnectionDriverName</name>
    <value>org.postgresql.Driver</value>
  </property>
  <property>
    <name>javax.jdo.option.ConnectionURL</name>
    <value>jdbc:postgresql://postgres-database-0.postgres-database:5432/hive</value>
  </property>
  <property>
    <name>javax.jdo.option.ConnectionUserName</name>
    <value>admin</value>
  </property>
  <property>
    <name>javax.jdo.option.ConnectionPassword</name>
    <value>admin</value>
  </property>
  <property>
    <name>metastore.warehouse.dir</name>
    <value>/apps/hive-warehouse</value>
  </property>
  <property>
    <name>hive.metastore.warehouse.external.dir</name>
    <value>/apps/hive-warehouse</value>
  </property>
  <property>
    <name>hive.hook.proto.base-directory</name>
    <value>/apps/hive-history</value>
  </property>

  <property>
    <name>hive.security.authorization.manager</name>
    <value>${env.METASTORE_SECURITY_AUTHORIZATION_MANAGER:-org.apache.hadoop.hive.ql.security.authorization.plugin.sqlstd.SQLStdHiveAuthorizerFactory}</value>
  </property>
  <property>
    <name>metastore.pre.event.listeners</name>
    <value>${env.METASTORE_PRE_EVENT_LISTENERS:-}</value>
  </property>

  <property>
    <name>metastore.catalog.servlet.port</name>
    <value>9001</value>
  </property>
  <property>
    <name>metastore.catalog.servlet.auth</name>
    <value>${env.HIVE_METASTORE_CATALOG_SERVLET_AUTH:-none}</value>
  </property>
  <property>
    <name>metastore.catalog.servlet.auth.oauth2.issuer</name>
    <value>http://keycloak-server:8080/realms/zookage</value>
  </property>
  <property>
    <name>metastore.catalog.servlet.auth.oauth2.audience</name>
    <value>hive-metastore</value>
  </property>
  <property>
    <name>metastore.catalog.servlet.auth.oauth2.principal.mapper.regex.username.field</name>
    <value>hive-client-username</value>
  </property>
</configuration>
