<configuration>
  <property>
    <name>hive.metastore.uris</name>
    <value>thrift://hive-metastore-server-0.hive-metastore-server:9083</value>
  </property>
  <property>
    <name>hive.reloadable.aux.jars.path</name>
    <value>/mnt</value>
  </property>
  <property>
    <name>hive.execution.engine</name>
    <value>tez</value>
  </property>
  <property>
    <name>hive.tez.container.size</name>
    <value>512</value>
  </property>
  <property>
    <name>hive.tez.cpu.vcores</name>
    <value>1</value>
  </property>
  <property>
    <name>hive.zookeeper.quorum</name>
    <value>zookeeper-server-0.zookeeper-server:2181,zookeeper-server-1.zookeeper-server:2181,zookeeper-server-2.zookeeper-server:2181</value>
  </property>

  <property>
    <name>hive.compactor.worker.threads</name>
    <value>1</value>
  </property>
  <property>
    <name>hive.explain.user</name>
    <value>false</value>
  </property>
  <property>
    <name>hive.server2.enable.doAs</name>
    <value>false</value>
  </property>
  <property>
    <name>tez.staging-dir</name>
    <value>/tmp/hive/tez/staging</value>
  </property>
  <property>
    <name>hive.server2.metrics.enabled</name>
    <value>true</value>
  </property>
  <property>
    <name>hive.hook.proto.base-directory</name>
    <value>/apps/hive-history</value>
  </property>

  <property>
    <name>hive.security.authenticator.manager</name>
    <value>org.apache.hadoop.hive.ql.security.SessionStateUserAuthenticator</value>
  </property>
  <property>
    <name>hive.security.authorization.enabled</name>
    <value>true</value>
  </property>
  <property>
    <name>hive.security.authorization.manager</name>
    <value>${env.HIVE_SECURITY_AUTHORIZATION_MANAGER:-org.apache.hadoop.hive.ql.security.authorization.plugin.sqlstd.SQLStdHiveAuthorizerFactory}</value>
  </property>

  <!-- For LLAP. You also have to unset tez.am.shuffle.auxiliary-service.id
  <property>
    <name>hive.llap.daemon.service.hosts</name>
    <value>@llap0</value>
  </property>
  <property>
    <name>hive.execution.mode</name>
    <value>llap</value>
  </property>
  <property>
    <name>hive.llap.io.enabled</name>
    <value>false</value>
  </property>
  <property>
    <name>hive.llap.execution.mode</name>
    <value>only</value>
  </property>
  <property>
    <name>hive.llap.daemon.rpc.port</name>
    <value>15000</value>
  </property>
  <property>
    <name>hive.llap.daemon.work.dirs</name>
    <value>/mnt/llap</value>
  </property>
  <property>
    <name>hive.llap.daemon.memory.per.instance.mb</name>
    <value>1024</value>
  </property>
  -->
</configuration>
