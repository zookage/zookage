    <name>ranger.usersync.policymanager.baseURL</name>
    <value>http://ranger-admin:6080</value>
  </property>
  <property>
    <name>ranger.usersync.policymgr.keystore</name>
    <value>dummy</value>
  </property>
  <property>
    <name>ranger.usersync.policymgr.password</name>
    <value>rangerusersync</value>
  </property>
